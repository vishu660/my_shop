{% extends 'base.html.twig' %}

{% block title %}My Cart | MyShop{% endblock %}

{% block body %}

<!-- Breadcrumb -->
<nav aria-label="breadcrumb" class="bg-light py-3">
  <div class="container">
    <ol class="breadcrumb mb-0">
      <li class="breadcrumb-item"><a href="/">Home</a></li>
      <li class="breadcrumb-item"><a href="/products">Products</a></li>
      <li class="breadcrumb-item active" aria-current="page">Shopping Cart</li>
    </ol>
  </div>
</nav>

<div class="container py-5">
  <div class="row">
    <div class="col-lg-8">
      <!-- Cart Header -->
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold mb-0">Your Shopping Cart</h2>
        <span class="text-muted">{{ items|length }} {{ items|length == 1 ? 'item' : 'items' }}</span>
      </div>

      {% if items is empty or items|default([])|length == 0 %}
        <!-- Empty Cart -->
        <div class="card border-0 shadow-sm text-center py-5">
          <div class="card-body">
            <i class="bi bi-cart-x display-1 text-muted mb-4"></i>
            <h4 class="fw-bold mb-3">Your cart is empty</h4>
            <p class="text-muted mb-4">Add some products to your cart and they will appear here</p>
            <a href="/products" class="btn btn-primary btn-lg">
              <i class="bi bi-bag me-2"></i>Start Shopping
            </a>
          </div>
        </div>
      {% else %}
        <!-- Cart Items -->
        <div class="card border-0 shadow-sm mb-4">
          <div class="card-body p-0">
            <div class="table-responsive">
              <table class="table table-hover mb-0">
                <thead class="table-light">
                  <tr>
                    <th width="300" class="py-3 ps-4">Product</th>
                    <th class="py-3 text-center">Price</th>
                    <th class="py-3 text-center">Quantity</th>
                    <th class="py-3 text-center">Subtotal</th>
                    <th class="py-3 pe-4 text-center">Actions</th>
                  </tr>
                </thead>
                <tbody>
                  {% for item in items %}
                    <tr class="align-middle">
                      <!-- Product Column -->
                      <td class="ps-4">
                        <div class="d-flex align-items-center">
                          <div class="me-3">
                            <img src="{{ item.image|default('https://images.unsplash.com/photo-1556656793-08538906a9f8?ixlib=rb-4.0.3&auto=format&fit=crop&w=100&q=80') }}" 
                                 alt="{{ item.name|default('Product') }}"
                                 class="rounded" 
                                 width="80" 
                                 height="80"
                                 style="object-fit: cover;">
                          </div>
                          <div>
                            <h6 class="fw-bold mb-1">{{ item.name|default('Product Name') }}</h6>
                            <p class="text-muted small mb-0">
                              {% if item.category|default(false) %}
                                <span class="badge bg-light text-dark">{{ item.category }}</span>
                              {% endif %}
                              {% if item.brand|default(false) %}
                                <span class="badge bg-light text-dark">{{ item.brand }}</span>
                              {% endif %}
                            </p>
                          </div>
                        </div>
                      </td>
                      
                      <!-- Price -->
                      <td class="text-center">
                        <div class="fw-bold">₹{{ item.price|default('0') }}</div>
                        {% if item.originalPrice|default(false) and item.originalPrice > item.price %}
                          <div class="text-decoration-line-through text-muted small">
                            ₹{{ item.originalPrice }}
                          </div>
                        {% endif %}
                      </td>
                      
                      <!-- Quantity -->
                      <td class="text-center">
                        <div class="d-flex align-items-center justify-content-center">
                          <div class="input-group" style="width: 120px;">
                            <button class="btn btn-outline-secondary btn-sm" type="button">
                              <i class="bi bi-dash"></i>
                            </button>
                            <input type="text" 
                                   class="form-control form-control-sm text-center" 
                                   value="{{ item.quantity|default(1) }}"
                                   readonly>
                            <button class="btn btn-outline-secondary btn-sm" type="button">
                              <i class="bi bi-plus"></i>
                            </button>
                          </div>
                        </div>
                      </td>
                      
                      <!-- Subtotal -->
                      <td class="text-center">
                        <div class="fw-bold">₹{{ item.subtotal|default(item.price|default('0')) }}</div>
                      </td>
                      
                      <!-- Actions -->
                      <td class="pe-4 text-center">
                        <div class="d-flex justify-content-center gap-2">
                          <button class="btn btn-outline-primary btn-sm rounded-circle">
                            <i class="bi bi-heart"></i>
                          </button>
                          <a href="/cart/remove/{{ item.id|default('1') }}" 
                             class="btn btn-outline-danger btn-sm rounded-circle"
                             onclick="return confirm('Are you sure you want to remove this item?')">
                            <i class="bi bi-trash"></i>
                          </a>
                        </div>
                      </td>
                    </tr>
                  {% endfor %}
                </tbody>
              </table>
            </div>
          </div>
        </div>

        <!-- Continue Shopping -->
        <div class="d-flex justify-content-between">
          <a href="/products" class="btn btn-outline-primary">
            <i class="bi bi-arrow-left me-2"></i>Continue Shopping
          </a>
          <a href="/cart/clear" class="btn btn-outline-danger" onclick="return confirm('Clear all items from cart?')">
            <i class="bi bi-trash me-2"></i>Clear Cart
          </a>
        </div>
      {% endif %}
    </div>

    <!-- Order Summary -->
    {% if items is not empty and items|default([])|length > 0 %}
      <div class="col-lg-4">
        <div class="card border-0 shadow-sm sticky-top" style="top: 100px;">
          <div class="card-body">
            <h5 class="card-title fw-bold mb-4">Order Summary</h5>
            
            <!-- Price Breakdown -->
            <div class="mb-4">
              <div class="d-flex justify-content-between mb-2">
                <span class="text-muted">Subtotal</span>
                <span class="fw-bold">₹{{ subtotal|default(total|default('0')) }}</span>
              </div>
              
              <div class="d-flex justify-content-between mb-2">
                <span class="text-muted">Shipping</span>
                <span class="fw-bold">
                  {% if shipping|default(0) > 0 %}
                    ₹{{ shipping }}
                  {% else %}
                    FREE
                  {% endif %}
                </span>
              </div>
              
              {% if discount|default(0) > 0 %}
                <div class="d-flex justify-content-between mb-2 text-success">
                  <span>Discount</span>
                  <span>-₹{{ discount }}</span>
                </div>
              {% endif %}
              
              {% if tax|default(0) > 0 %}
                <div class="d-flex justify-content-between mb-2">
                  <span class="text-muted">Tax</span>
                  <span>₹{{ tax }}</span>
                </div>
              {% endif %}
              
              <hr>
              
              <div class="d-flex justify-content-between mb-4">
                <span class="h5 fw-bold">Total</span>
                <span class="h5 fw-bold text-success">₹{{ total|default('0') }}</span>
              </div>
            </div>
            
            <!-- Promo Code -->
            <div class="mb-4">
              <label class="form-label fw-bold">Promo Code</label>
              <div class="input-group">
                <input type="text" class="form-control" placeholder="Enter code">
                <button class="btn btn-outline-secondary" type="button">Apply</button>
              </div>
            </div>
            
            <!-- Checkout Button -->
            <a href="/checkout" class="btn btn-success btn-lg w-100 mb-3">
              <i class="bi bi-lock me-2"></i>Proceed to Checkout
            </a>
            
            <!-- Security Info -->
            <div class="alert alert-light small text-center mb-0">
              <div class="d-flex justify-content-center gap-3 mb-2">
                <div>
                  <i class="bi bi-shield-check text-success"></i>
                  <span class="d-block small">Secure Payment</span>
                </div>
                <div>
                  <i class="bi bi-truck text-primary"></i>
                  <span class="d-block small">Free Shipping</span>
                </div>
                <div>
                  <i class="bi bi-arrow-counterclockwise text-info"></i>
                  <span class="d-block small">Easy Returns</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    {% endif %}
  </div>
</div>

<style>
  /* Custom Styles */
  .breadcrumb {
    background-color: transparent;
    padding: 0;
  }
  
  .breadcrumb-item a {
    text-decoration: none;
    color: #6c757d;
  }
  
  .breadcrumb-item.active {
    color: #212529;
    font-weight: 500;
  }
  
  .table th {
    font-weight: 600;
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }
  
  .table td {
    vertical-align: middle;
  }
  
  .input-group .btn-outline-secondary {
    padding: 0.25rem 0.5rem;
  }
  
  .input-group .form-control-sm {
    padding: 0.25rem;
  }
  
  .btn-outline-primary,
  .btn-outline-danger {
    padding: 0.375rem;
    width: 36px;
    height: 36px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
  }
  
  .card {
    border-radius: 12px;
    overflow: hidden;
  }
  
  .sticky-top {
    z-index: 10;
  }
  
  /* Responsive */
  @media (max-width: 768px) {
    .table-responsive {
      font-size: 0.9rem;
    }
    
    .table th,
    .table td {
      padding: 0.75rem 0.5rem;
    }
    
    .d-flex.justify-content-between {
      flex-direction: column;
      gap: 1rem;
    }
    
    .btn {
      width: 100%;
    }
  }
  
  @media (max-width: 576px) {
    .table-responsive {
      font-size: 0.85rem;
    }
    
    .table th:nth-child(3),
    .table td:nth-child(3),
    .table th:nth-child(4),
    .table td:nth-child(4) {
      display: none;
    }
    
    .input-group {
      width: 100px !important;
    }
  }
</style>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

{% endblock %}