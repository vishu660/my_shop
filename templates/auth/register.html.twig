  border: 1px solid #ced4da !important;
  border-left: 0 !important;
}

  .btn-success {
    padding: 0.75rem;
    font-weight: 600;
  }
  
  .btn-outline-secondary:hover {
    background-color: #6c757d;
    color: white;
  }
  
  /* Social buttons */
