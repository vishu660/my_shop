{% extends 'base.html.twig' %}

{% block title %}Admin Dashboard | MyShop{% endblock %}

{% block body %}

<div class="container-fluid py-4">
  <!-- Page Header with Admin Info -->
  <div class="d-flex justify-content-between align-items-center mb-5">
    <div>
      <h1 class="fw-bold display-6 mb-2">
        <i class="bi bi-speedometer2 text-gradient-primary me-2"></i>Admin Dashboard
      </h1>
      <p class="text-muted mb-0 fs-5">
        <i class="bi bi-calendar-check me-1"></i> 
        {{ "now"|date("F j, Y") }} • 
        <span class="badge bg-light text-dark">
          <i class="bi bi-shield-check text-success me-1"></i>Admin Privileges
        </span>
      </p>
    </div>

    <div class="d-flex align-items-center">
      <div class="me-3 text-end d-none d-md-block">
        <div class="fw-semibold">Admin User</div>
        <div class="text-muted small">Administrator</div>
      </div>
      <a href="{{ path('app_logout') }}" class="btn btn-danger px-4 py-2 rounded-pill shadow-sm">
        <i class="bi bi-box-arrow-right me-2"></i>Logout
      </a>
    </div>
  </div>

  <!-- Stats Cards with Hover Effects -->
  <div class="row g-4 mb-5">
    <div class="col-xl-3 col-md-6">
      <div class="card stats-card border-0 shadow-lg hover-lift">
        <div class="card-body p-4">
          <div class="d-flex align-items-center">
            <div class="icon-circle bg-primary bg-opacity-10 text-primary me-4">
              <i class="bi bi-box-seam fs-3"></i>
            </div>
            <div class="flex-grow-1">
              <h6 class="text-muted mb-1">Total Products</h6>
              <h2 class="fw-bold mb-0">120</h2>
              <div class="mt-2">
                <span class="badge bg-success bg-opacity-10 text-success">
                  <i class="bi bi-arrow-up me-1"></i>12 New
                </span>
              </div>
            </div>
          </div>
        </div>
        <div class="card-footer bg-transparent border-top-0 py-3">
          <a href="#" class="text-decoration-none text-primary small">
            View Details <i class="bi bi-arrow-right ms-1"></i>
          </a>
        </div>
      </div>
    </div>

    <div class="col-xl-3 col-md-6">
      <div class="card stats-card border-0 shadow-lg hover-lift">
        <div class="card-body p-4">
          <div class="d-flex align-items-center">
            <div class="icon-circle bg-success bg-opacity-10 text-success me-4">
              <i class="bi bi-receipt fs-3"></i>
            </div>
            <div class="flex-grow-1">
              <h6 class="text-muted mb-1">Total Orders</h6>
              <h2 class="fw-bold mb-0">86</h2>
              <div class="mt-2">
                <span class="badge bg-warning bg-opacity-10 text-warning">
                  <i class="bi bi-clock me-1"></i>5 Pending
                </span>
              </div>
            </div>
          </div>
        </div>
        <div class="card-footer bg-transparent border-top-0 py-3">
          <a href="#" class="text-decoration-none text-success small">
            View Details <i class="bi bi-arrow-right ms-1"></i>
          </a>
        </div>
      </div>
    </div>

    <div class="col-xl-3 col-md-6">
      <div class="card stats-card border-0 shadow-lg hover-lift">
        <div class="card-body p-4">
          <div class="d-flex align-items-center">
            <div class="icon-circle bg-warning bg-opacity-10 text-warning me-4">
              <i class="bi bi-people fs-3"></i>
            </div>
            <div class="flex-grow-1">
              <h6 class="text-muted mb-1">Registered Users</h6>
              <h2 class="fw-bold mb-0">340</h2>
              <div class="mt-2">
                <span class="badge bg-info bg-opacity-10 text-info">
                  <i class="bi bi-person-plus me-1"></i>8 Today
                </span>
              </div>
            </div>
          </div>
        </div>
        <div class="card-footer bg-transparent border-top-0 py-3">
          <a href="#" class="text-decoration-none text-warning small">
            View Details <i class="bi bi-arrow-right ms-1"></i>
          </a>
        </div>
      </div>
    </div>

    <div class="col-xl-3 col-md-6">
      <div class="card stats-card border-0 shadow-lg hover-lift">
        <div class="card-body p-4">
          <div class="d-flex align-items-center">
            <div class="icon-circle bg-danger bg-opacity-10 text-danger me-4">
              <i class="bi bi-currency-rupee fs-3"></i>
            </div>
            <div class="flex-grow-1">
              <h6 class="text-muted mb-1">Total Revenue</h6>
              <h2 class="fw-bold mb-0">₹1.2L</h2>
              <div class="mt-2">
                <span class="badge bg-success bg-opacity-10 text-success">
                  <i class="bi bi-graph-up-arrow me-1"></i>24%
                </span>
              </div>
            </div>
          </div>
        </div>
        <div class="card-footer bg-transparent border-top-0 py-3">
          <a href="#" class="text-decoration-none text-danger small">
            View Details <i class="bi bi-arrow-right ms-1"></i>
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Quick Action Cards -->
  <div class="row mb-4">
    <div class="col-12">
      <h3 class="fw-bold mb-4">
        <i class="bi bi-lightning-charge text-warning me-2"></i>Quick Actions
      </h3>
    </div>
  </div>

  <div class="row g-4 mb-5">
    <div class="col-lg-4 col-md-6">
      <div class="card action-card border-0 shadow-sm h-100 hover-scale">
        <div class="card-body p-4">
          <div class="d-flex align-items-start mb-4">
            <div class="icon-square bg-primary bg-opacity-10 p-3 rounded-3 me-3">
              <i class="bi bi-box text-primary fs-3"></i>
            </div>
            <div>
              <h5 class="fw-bold mb-2">Product Management</h5>
              <p class="text-muted mb-0">Add, edit, and manage your product catalog with ease.</p>
            </div>
          </div>
          <div class="d-grid gap-2">
            <a href="{{ path('admin_product_add') }}" class="btn btn-primary rounded-pill py-2">
              <i class="bi bi-plus-circle me-2"></i>Add New Product
            </a>
            <a href="#" class="btn btn-outline-primary rounded-pill py-2">
              <i class="bi bi-list-ul me-2"></i>View All Products
            </a>
          </div>
        </div>
      </div>
    </div>

    <div class="col-lg-4 col-md-6">
      <div class="card action-card border-0 shadow-sm h-100 hover-scale">
        <div class="card-body p-4">
          <div class="d-flex align-items-start mb-4">
            <div class="icon-square bg-success bg-opacity-10 p-3 rounded-3 me-3">
              <i class="bi bi-receipt text-success fs-3"></i>
            </div>
            <div>
              <h5 class="fw-bold mb-2">Order Management</h5>
              <p class="text-muted mb-0">Process, track, and manage customer orders efficiently.</p>
            </div>
          </div>
          <div class="d-grid gap-2">
            <a href="#" class="btn btn-success rounded-pill py-2">
              <i class="bi bi-eye me-2"></i>View Recent Orders
            </a>
            <a href="#" class="btn btn-outline-success rounded-pill py-2">
              <i class="bi bi-truck me-2"></i>Shipping Dashboard
            </a>
          </div>
        </div>
      </div>
    </div>

    <div class="col-lg-4 col-md-6">
      <div class="card action-card border-0 shadow-sm h-100 hover-scale">
        <div class="card-body p-4">
          <div class="d-flex align-items-start mb-4">
            <div class="icon-square bg-warning bg-opacity-10 p-3 rounded-3 me-3">
              <i class="bi bi-people text-warning fs-3"></i>
            </div>
            <div>
              <h5 class="fw-bold mb-2">User Management</h5>
              <p class="text-muted mb-0">Manage user accounts, roles, and permissions.</p>
            </div>
          </div>
          <div class="d-grid gap-2">
            <a href="#" class="btn btn-warning rounded-pill py-2 text-white">
              <i class="bi bi-person-plus me-2"></i>Add New User
            </a>
            <a href="#" class="btn btn-outline-warning rounded-pill py-2">
              <i class="bi bi-person-badge me-2"></i>Manage Roles
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Recent Activity & System Status -->
  <div class="row g-4">
    <div class="col-lg-8">
      <div class="card border-0 shadow-sm h-100">
        <div class="card-header bg-white border-0 py-3">
          <h5 class="fw-bold mb-0">
            <i class="bi bi-clock-history text-primary me-2"></i>Recent Activity
          </h5>
        </div>
        <div class="card-body p-0">
          <div class="list-group list-group-flush">
            <div class="list-group-item border-0 py-3 px-4">
              <div class="d-flex align-items-center">
                <div class="activity-icon bg-primary bg-opacity-10 p-2 rounded-circle me-3">
                  <i class="bi bi-cart-check text-primary"></i>
                </div>
                <div class="flex-grow-1">
                  <div class="fw-semibold">New order #ORD-7892 placed</div>
                  <div class="text-muted small">2 hours ago • ₹2,499</div>
                </div>
                <span class="badge bg-primary bg-opacity-10 text-primary">Completed</span>
              </div>
            </div>
            <div class="list-group-item border-0 py-3 px-4">
              <div class="d-flex align-items-center">
                <div class="activity-icon bg-success bg-opacity-10 p-2 rounded-circle me-3">
                  <i class="bi bi-box text-success"></i>
                </div>
                <div class="flex-grow-1">
                  <div class="fw-semibold">New product added: "Wireless Headphones"</div>
                  <div class="text-muted small">4 hours ago • by Admin</div>
                </div>
                <span class="badge bg-success bg-opacity-10 text-success">Product</span>
              </div>
            </div>
            <div class="list-group-item border-0 py-3 px-4">
              <div class="d-flex align-items-center">
                <div class="activity-icon bg-warning bg-opacity-10 p-2 rounded-circle me-3">
                  <i class="bi bi-person text-warning"></i>
                </div>
                <div class="flex-grow-1">
                  <div class="fw-semibold">New user registration: "rajesh_kumar"</div>
                  <div class="text-muted small">Yesterday • 6:24 PM</div>
                </div>
                <span class="badge bg-warning bg-opacity-10 text-warning">User</span>
              </div>
            </div>
            <div class="list-group-item border-0 py-3 px-4">
              <div class="d-flex align-items-center">
                <div class="activity-icon bg-info bg-opacity-10 p-2 rounded-circle me-3">
                  <i class="bi bi-currency-rupee text-info"></i>
                </div>
                <div class="flex-grow-1">
                  <div class="fw-semibold">Payment received for order #ORD-7881</div>
                  <div class="text-muted small">Yesterday • ₹5,299</div>
                </div>
                <span class="badge bg-info bg-opacity-10 text-info">Payment</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-lg-4">
      <div class="card border-0 shadow-sm h-100">
        <div class="card-header bg-white border-0 py-3">
          <h5 class="fw-bold mb-0">
            <i class="bi bi-heart-pulse text-danger me-2"></i>System Status
          </h5>
        </div>
        <div class="card-body">
          <div class="mb-4">
            <div class="d-flex justify-content-between mb-2">
              <span class="fw-semibold">Server Load</span>
              <span class="text-success">24%</span>
            </div>
            <div class="progress" style="height: 8px;">
              <div class="progress-bar bg-success" role="progressbar" style="width: 24%" aria-valuenow="24" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
          </div>
          
          <div class="mb-4">
            <div class="d-flex justify-content-between mb-2">
              <span class="fw-semibold">Database</span>
              <span class="text-primary">Online</span>
            </div>
            <div class="d-flex align-items-center">
              <i class="bi bi-check-circle-fill text-success me-2"></i>
              <span class="small">All systems operational</span>
            </div>
          </div>
          
          <div class="mb-3">
            <div class="d-flex justify-content-between mb-2">
              <span class="fw-semibold">Last Backup</span>
              <span class="text-muted">Jan 12, 2024</span>
            </div>
            <div class="d-flex align-items-center">
              <i class="bi bi-shield-check text-info me-2"></i>
              <span class="small">Backup completed successfully</span>
            </div>
          </div>
          
          <div class="mt-4 pt-3 border-top">
            <a href="#" class="btn btn-outline-secondary w-100 rounded-pill">
              <i class="bi bi-gear me-2"></i>System Settings
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  /* Custom CSS without JavaScript */
  :root {
    --primary-color: #4361ee;
    --success-color: #06d6a0;
    --warning-color: #ff9e00;
    --danger-color: #ef476f;
  }

  .text-gradient-primary {
    background: linear-gradient(135deg, var(--primary-color), #3a0ca3);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .icon-circle {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
  }

  .icon-square {
    transition: all 0.3s ease;
  }

  .stats-card {
    border-radius: 16px;
    transition: all 0.3s ease;
    overflow: hidden;
  }

  .stats-card:hover {
    transform: translateY(-5px);
  }

  .stats-card:hover .icon-circle {
    transform: scale(1.1);
  }

  .action-card {
    border-radius: 16px;
    transition: all 0.3s ease;
  }

  .action-card:hover {
    transform: scale(1.02);
  }

  .hover-lift:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(0,0,0,0.1) !important;
  }

  .hover-scale:hover {
    transform: scale(1.02);
  }

  .badge {
    padding: 0.35em 0.65em;
    font-weight: 500;
  }

  .progress {
    border-radius: 10px;
  }

  .progress-bar {
    border-radius: 10px;
  }

  .list-group-item {
    transition: background-color 0.2s ease;
  }

  .list-group-item:hover {
    background-color: rgba(var(--primary-color), 0.05);
  }

  .activity-icon {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .btn {
    font-weight: 500;
    transition: all 0.3s ease;
  }

  .btn:hover {
    transform: translateY(-2px);
  }

  .rounded-pill {
    border-radius: 50px !important;
  }
</style>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

{% endblock %}